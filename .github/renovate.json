{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "schedule:weekly"
    ],
    "pre-commit": {
        "enabled": true
    },
    "postUpgradeTasks": {
        "commands": [
            "pip install uv",
            "uv lock --all-groups",
            "uv sync --all-groups",
            "uv run ruff check --fix",
            "uv run ruff format"
        ],
        "executionMode": "update"
    }
}
