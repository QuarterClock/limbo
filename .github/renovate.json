{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices",
        "schedule:weekly"
    ],
    "pre-commit": {
        "enabled": true
    },
    "enabledManagers": ["pre-commit", "pep621"],
    "packageRules": [
        {
            "description": "Group all pre-commit updates into a single PR",
            "matchManagers": ["pre-commit"],
            "groupName": "pre-commit hooks"
        },
        {
            "description": "Group all pep621 updates into a single PR",
            "matchManagers": ["pep621"],
            "groupName": "pep621"
        }
    ],
    "postUpgradeTasks": {
        "commands": [
            "pip install uv",
            "uv lock --all-groups",
            "uv sync --all-groups",
            "uv run ruff check --fix",
            "uv run ruff format"
        ],
        "executionMode": "update"
    }
}
